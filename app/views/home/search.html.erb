<div class="row">
  <%= form_tag search_path, method: 'get' do %>
  <div class="col-xs-4">
    <%= text_field_tag :q, params[:q], class: 'form-control' %>
  </div>
  <div class="col-xs-2">
    <%= submit_tag "Cari", class: 'btn btn-block btn-lg btn-primary' %>
  </div>
  <% end %>
</div>

<div id="search-result">
  <p>Ditemukan <%= @articles.count %> artikel.</p>
  <% @articles.each do |article| %>
    <div class="row">
      <div class="col-xs-2">
        <%= image_tag article.img, class: 'img-responsive' %>
      </div>
      <div class="col-xs-10">
        <h4><%= link_to article.try(:highlight).try(:title) ? article.highlight.title[0].html_safe : article.title,
          controller: "articles",
          action: "show",
          id: article.id%></h4>
          <p>
        <% if article.try(:highlight).try(:content) %>
          <% article.highlight.content.each do |snippet| %>
            <%= snippet.html_safe %>
          <% end %>
          ...</p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>



