<p id="notice"><%= notice %></p>

<h1>Blog Statistics</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Domain</th>
      <th>Number Of Crawled</th>
      <th>Crawled Links</th>
      <th>Whitelist Links</th>
      <th>Indexed Links</th>
      <th>Do Crawl</th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.domain %></td>
        <td><%= blog.num_of_crawled %></td>
        <td><%= link_to blog.links_count, blog_links_path(blog) %></td>
        <td><%= blog.links.white.count %></td>
        <td><%= blog.articles.count %></td>
        <td><%= link_to 'Crawl', do_crawling_blog_path(blog) %></td>
      </tr>
    <% end %>
  </tbody>
</table>