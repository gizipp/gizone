<p id="notice"><%= notice %></p>

<h1>Listing Articles (<%= @articles.count %>)</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Desc</th>
      <th>Content</th>
      <th>Img</th>
      <th>Url</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= link_to article.desc.size, article %></td>
        <td><%= link_to article.content.size, article %></td>
        <td><%= article.img %></td>
        <td><%= article.url %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
